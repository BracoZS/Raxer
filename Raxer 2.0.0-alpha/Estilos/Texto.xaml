<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="t_1" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource primario}"/>
        <Setter Property="FontFamily" Value="/fuentes/#Inter"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <Style x:Key="t_2" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource primario}" />
        <Setter Property="FontFamily" Value="/fuentes/#Inter"/>
        <Setter Property="FontSize" Value="12" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style x:Key="t_3" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource primario}" />
        <Setter Property="FontFamily" Value="/fuentes/#Inter"/>
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="t_x" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource primario}"/>
        <Setter Property="FontFamily" Value="/fuentes/#Inter"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <Style x:Key="t_4" TargetType="TextBlock" BasedOn="{StaticResource t_x}">
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="t_panel" TargetType="TextBlock" BasedOn="{StaticResource t_x}">
        <Setter Property="Height" Value="17"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="t_lista" TargetType="TextBlock" BasedOn="{StaticResource t_x}">
        <Setter Property="Height" Value="31"/>
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="t_panel_left" TargetType="TextBlock" BasedOn="{StaticResource t_panel}">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0,0,11,0" />
    </Style>

    <Style x:Key="t_x_control" TargetType="Control">
        <Setter Property="Foreground" Value="{StaticResource primario}" />
        <Setter Property="FontFamily" Value="/fuentes/#Inter"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>

    <Style x:Key="t_4_box" TargetType="TextBox">
        <Setter Property="Foreground" Value="red" />
        <Setter Property="FontFamily" Value="/fuentes/#Inter"/>
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
</ResourceDictionary>